<Page x:Class="Магазин_техники.Pages.PageReadInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин_техники.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReadInformation">

    <Grid>
        <DataGrid Name="dgTechnica"  >
            <DataGrid.RowStyle>
                <Style 
                    TargetType="DataGridRow">
                    <Setter 
                        Property="Foreground" 
        Value="{Binding Path=ColorText}">
                        
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns >
               
                <DataGridTextColumn 
                    Width="*"
                    Header="Тип техники" 
                    Binding="{Binding тип_техники}"/>
                <DataGridTextColumn 
                    Width="*"
                    Header="Модель" 
                    Binding="{Binding модель_товара}"/>
                <DataGridTextColumn 
                    Width="*"
                    Header="Количество товара"
                    Binding="{Binding всего_товара}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>


</Page>
